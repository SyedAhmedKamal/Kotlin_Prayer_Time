<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.KotlinPrayerTime.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.KotlinPrayerTime.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center"
        android:weightSum="4"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/fajar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fajar"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_widget_fajar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fajar"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="2dp"
            android:layout_height="30dp"
            app:dividerColor="@color/black"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/zohr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maghrib"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_widget_zohr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maghrib"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="2dp"
            android:layout_height="30dp"
            app:dividerColor="@color/black"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/asar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asar"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_widget_asar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asar"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="2dp"
            android:layout_height="30dp"
            app:dividerColor="@color/black"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zohr"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_widget_maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zohr"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="2dp"
            android:layout_height="30dp"
            app:dividerColor="@color/black"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/isha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isha"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_widget_isha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isha"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>